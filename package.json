{
  "name": "waelio-utils",
  "version": "3.1.27",
  "description": "Helper Utils often used in websites",
  "homepage": "https://github.com/waelio/waelio-utils#index",
  "keywords": [
    "utilities",
    "browser",
    "quasar",
    "vue",
    "javascript",
    "helpers",
    "react",
    "angular"
  ],
  "files": [
    "dist/*",
    "src/*"
  ],
  "directories": {
    "src": "src",
    "dist": "dist",
    "test": "spec"
  },
  "sideEffects": false,
  "main": "dist/waelioUtils.js",
  "size-limit": [
    {
      "path": "dist/waelioUtils.*js"
    }
  ],
  "types": "waelioUtils.d.ts",
  "scripts": {
    "clean": "node ./tools/clean.ts",
    "prepublishOnly": "npm run build",
    "build:cjs": "rollup -c tools/rollup.cjs.js",
    "build:esm": "rollup -c tools/rollup.esm.js",
    "format": "prettier --write src tools examples",
    "examples": "rollup -c examples/rollup.config.js",
    "build": "npm run clean & npm run build:cjs & npm run build:esm && npm run examples && npm run format",
    "size": "rollup -c && size-limit",
    "start": "rollup -c && size-limit",
    "test": "jasmine && size-limit"
  },
  "author": {
    "name": "Wael Wahbeh",
    "email": "wahbehw@gmail.com",
    "url": "https://waelio.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/waelio/waelio-utils.git"
  },
  "bugs": {
    "url": "https://github.com/waelio/waelio-utils/issues"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-multi-entry": "^4.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@size-limit/preset-small-lib": "^5.0.1",
    "axios": "^0.21.1",
    "eslint": "^7.15.0",
    "jasmine": "^3.7.0",
    "jsdoc-to-markdown": "^7.0.1",
    "magic-string": "^0.25.7",
    "rollup": "^2.43.0",
    "rollup-plugin-bundle-size": "^1.0.3",
    "rollup-plugin-ts": "^1.4.0",
    "rollup-plugin-ts-treeshaking": "^1.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "size-limit": "^5.0.1"
  }
}
