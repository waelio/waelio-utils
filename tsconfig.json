{  

  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "declarationMap": true,
    "module": "CommonJS",
    "target": "ES2015",
    "outDir": "./lib",
    "declarationDir": "./lib/types",
    "charset": "utf8",
    "strict": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "typeRoots": [
        "node_modules/@types"
     ]
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "./tsconfig.json",
    "./tools",
    "./r_n_d",
    "./spec",
    "./example",
    "node_modules",
    "./src/utils/meta",
    "./dist/**/*"
  ]
}