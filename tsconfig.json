{
  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": true,
    "listFiles": false,
    "baseUrl": "./",
    "importHelpers": true,
    "isolatedModules": true,
    "newLine": "LF",
    "declaration": true,
    "declarationDir": "dist/types",
    "declarationMap": true,
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": false,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noImplicitReturns": false,
    "outDir": "dist",
    "pretty": true,
    "target": "esnext",
    "noUnusedLocals": true,
    "removeComments": false,
    "skipLibCheck": false,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "node"
    ],
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/@types",
      "types/"
    ],
    "paths": {
      "~/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "./tools",
    "./r_n_d",
    "./spec",
    "./example",
    "node_modules",
    "./src/utils/meta",
    "./dist/**/*"
  ]
}