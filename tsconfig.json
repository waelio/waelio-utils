{  

  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "declarationMap": true,
    "module": "CommonJS",
    "target": "ES2015",
    "outDir": "./lib",
    "declarationDir": "./types",
    "charset": "utf8",
    "strict": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "typeRoots": [
        "node_modules/@types"
     ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "__tests__",
    "example",
    "lib",
    "r_n_d",
    "spec",
    "src/utils/meta",
    "node_modules",
    "tsconfig.json"
  ]
}